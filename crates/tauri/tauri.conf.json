{
  "productName": "gui",
  "version": "0.1.0",
  "identifier": "com.gui.app",
  "build": {
    "beforeDevCommand": "pnpm internal-tauri:dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build --prefix ../apps/desktop",
    "frontendDist": "../apps/desktop/dist"
  },
  "app": {
    "windows": [
      {
        "title": "tv-tracker",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
